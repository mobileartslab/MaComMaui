<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaComMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MaComMaui"
    xmlns:views="clr-namespace:MaComMaui.Views"
    Shell.FlyoutBehavior="Disabled">

      <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

      <ShellContent
        Title="Home View"
        ContentTemplate="{DataTemplate views:HomeView}"
        Route="HomeView" />

        <ShellContent
        Title="Detail View"
        ContentTemplate="{DataTemplate views:DetailView}"
        Route="DetailView" />

</Shell>

